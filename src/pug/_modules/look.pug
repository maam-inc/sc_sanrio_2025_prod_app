include ../_project/svg_look

mixin sec_ttl(i)
  h2.sec-ttl: +ttl(i)

mixin chara(i,j)
  .sec-chara(class=`chara${j}`)
    +webPPng(`${IMG_DIR}look/`,`sec${i+1}_chara${j}`, `sec${i+1}_chara${j}`, devMode, 'img')

.look#look
  -for( let i = 0; i < 3; i++ )
    if i == 0
      section.sec(class=`sec${i+1}`)
        +sec_ttl(i)
        .sec_img1: img(src=`${IMG_DIR}look/sec${i+1}_1.png` loading="lazy")
        .sec_img2: img(src=`${IMG_DIR}look/sec${i+1}_2.gif` loading="lazy")
        .sec_img3: img(src=`${IMG_DIR}look/sec${i+1}_3.gif` loading="lazy")
        +online-btn
        +chara(i,1)

    if i == 1
      section.sec(class=`sec${i+1}`)
        +sec_ttl(i)
        .sec_img1: img(src=`${IMG_DIR}look/sec${i+1}_1.png` loading="lazy")
        .sec_img2: img(src=`${IMG_DIR}look/sec${i+1}_2.gif` loading="lazy")
        +chara(i,1)
        .sec_img3: img(src=`${IMG_DIR}look/sec${i+1}_3.gif` loading="lazy")
        +online-btn

    if i == 2
      section.sec(class=`sec${i+1}`)
        +sec_ttl(i)
        .sec_img1: img(src=`${IMG_DIR}look/sec${i+1}_1.png` loading="lazy")
        .sec_img2_wrapper
          .sec_img2: img(src=`${IMG_DIR}look/sec${i+1}_2.gif` loading="lazy")
          +chara(i,1)
        .sec_img3: img(src=`${IMG_DIR}look/sec${i+1}_3.gif` loading="lazy")
        +online-btn
